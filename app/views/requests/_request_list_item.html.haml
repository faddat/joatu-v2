- request_model ||= request_list_item
%a.list-group-item.request-list-group-item{href: request_path(request_model), class: "#{request_model.type_class}"}
  %h4
    = request_model.title
    %br
    %small= t('requests.requester_label', requester: request_model.created_by_name)
  %p= truncate(request_model.description, length: 100)
