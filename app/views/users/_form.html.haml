= simple_form_for(@user) do |f|
  = f.error_notification

  .form-inputs
    = f.input :email
    = f.input :password, hint: t('users.leave_password_blank_to_not_change')
    = f.input :password_confirmation, hint: t('users.leave_password_blank_to_not_change')
    = f.input :postal_code, hint: t('users.postal_code_changes_pod')

  .form-actions
    = f.button :submit
